package federatedb;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;

public class WrapperXML extends IWrapper{	
	List<String> tables;
	
	public WrapperXML(String sourceFolder) {
		tables = new ArrayList<String>(); 
		File folder = new File(sourceFolder);
		File[] listOfFiles = folder.listFiles();
		
		for (File file : listOfFiles) {
		    if (file.isFile()) {
		    	String fileName = file.getName();
		        //System.out.println(file.getName());
		        tables.add(fileName.substring(0, fileName.lastIndexOf('.')));
		    }
		}
	}
	
	public void listFilesForFolder(final File folder) {
	    
	}
	
	String getModel(String table) {
		return null;
	}	

	List<String> getTables() {
		return null;
	}

	String executeQuery(String relation, String query, List<String> projections, List<String> selections) {
		return null;
	}
	
